
<% if @user.admin == true %>
  <%= link_to 'New Event', new_event_path, style:"color: white; font-size: 20px;" %>
<% end %>

  

    <% @events.each do |event| %>
      <div class="card mb-3 mx-auto">
        <div class="row no-gutters">
          <div class="col-md-6">
            <%= image_tag event.main_image, class:"card-img" %>
          </div>
          <div class="col-md-6">                
            <div class="card-body">
              <h2 class="card-title", style="text-decoration: underline;"><%= event.name %><h2>
              <h6 class="card-text">Taking place <%= event.date %>, <%= event.time %> @ <%= event.place %></h6>
              <br>
              <p class="card-text"><%= event.description %></p>                    
            </div>
          </div>
        </div>
      </div>                
      <% if @user.admin == true %>
        <%= link_to 'Show', event, style:"color: white; font-size: 20px;" %>
        <%= link_to 'Edit', edit_event_path(event), style:"color: white; font-size: 20px;" %>
        <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, style:"color: white; font-size: 20px;" %>
      <% end %>
    <% end %>


<br>

